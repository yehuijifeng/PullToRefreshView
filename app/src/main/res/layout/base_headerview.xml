<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <ImageView
        android:id="@+id/custom_header_image"
        android:layout_width="@dimen/refresh_icon_height"
        android:layout_height="@dimen/refresh_icon_height"
        android:padding="@dimen/padding_and_margin_xx"
        android:src="@drawable/ic_refresh_arrow"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/custom_header_linear_layout"
        android:layout_toStartOf="@+id/custom_header_linear_layout" />

    <LinearLayout
        android:id="@+id/custom_header_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/custom_header_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_hint_normal"
            android:textSize="@dimen/text_size_x" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_and_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_last_time"
                android:textSize="@dimen/text_size_x" />

            <TextView
                android:id="@+id/custom_header_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size_x" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>